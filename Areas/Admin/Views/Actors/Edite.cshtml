@model Actor
<div class="container">
    <div class="card p-4 mx-auto" style="max-width: 1000px;">
        <form method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="FirstName" class="form-label">FirstName</label>
                <input type="text" class="form-control" name="FirstName" value="@Model.FirstName">
            </div>
            <span class="text-bg-danger" asp-validation-for="@Model.FirstName" asp-for="FirstName"></span>
            <div class="mb-3">
                <label for="LastName" class="form-label">LastName</label>
                <input type="text" class="form-control" name="LastName" value="@Model.LastName">
            </div>
            <span class="text-bg-danger" asp-validation-for="@Model.FirstName" asp-for="FirstName"></span>
            <div class="mb-3">
                <label for="Bio" class="form-label">Bio</label>
                <textarea class="form-control" name="Bio" rows="3" placeholder="You Description Here...">@Model.Bio</textarea>
            </div>
            <div class="mb-3">
                <label for="profileImag" class="form-label">ProfilePicture</label>
                <input type="file" class="form-control" id="profileImag" name="profileImag">
                <img id="previewImage" src="#" alt="Image Preview" class="mt-2" style="max-width: 200px; display: none;">
            </div>
            <div class="mb-3">
                <label for="News" class="form-label">News</label>
                <textarea class="form-control" name="News" rows="3" placeholder="You Description Here...">@Model.News</textarea>
            </div>


            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary" style="width:150px;">Submit</button>
            </div>
        </form>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.getElementById('profileImag').addEventListener('change', function(event) {
        const file = event.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function(e) {
                const previewImage = document.getElementById('previewImage');
                previewImage.src = e.target.result;
                previewImage.style.display = 'block'; // أظهر الصورة
            };
            reader.readAsDataURL(file);
        }
    });
</script>
