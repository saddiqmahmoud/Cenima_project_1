@model Cinema
<div class="container">
    <div class="card p-4 mx-auto" style="max-width: 1000px;">
        <form method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="FirstName" class="form-label">Name</label>
                <input type="text" class="form-control" name="name" value="@Model.name">
            </div>
            <div class="mb-3">
                <label for="Description" class="form-label">Description</label>
                <textarea class="form-control" name="Description" rows="3" placeholder="You Description Here...">@Model.Description</textarea>
            </div>
            <div class="mb-3">
                <label for="cinemaLogo" class="form-label">CinemaLogo</label>
                <input type="file" class="form-control" id="cinemaLogo" name="cinemaLogo">
                <img id="previewImage" src="#" alt="Image Preview" class="mt-2" style="max-width: 200px; display: none;">
            </div>
            <div class="mb-3">
                <label for="Address" class="form-label">Address</label>
                <input type="text" class="form-control" name="Address" value="@Model.Address">
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary" style="width:150px;">Submit</button>
            </div>
        </form>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.getElementById('MainImg').addEventListener('change', function(event) {
        const file = event.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function(e) {
                const previewImage = document.getElementById('previewImage');
                previewImage.src = e.target.result;
                previewImage.style.display = 'block'; // أظهر الصورة
            };
            reader.readAsDataURL(file);
        }
    });
</script>