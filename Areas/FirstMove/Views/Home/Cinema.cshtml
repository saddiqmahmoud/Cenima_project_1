@using Cenima_project.NewModels
@model List<Cinema>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cinema</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #fff;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .page-title {
            text-align: center;
            margin: 30px 0;
            font-size: 2rem;
            font-weight: bold;
            color: #2c3e50;
        }

        .categories-table {
            width: 50%;
            margin: 0 auto;
            border-collapse: collapse;
            text-align: center;
        }

            .categories-table th, .categories-table td {
                border: 1px solid #ddd;
                padding: 12px;
                font-size: 1.1rem;
            }

        .btn-view {
            background-color: #e74c3c;
            color: #fff;
            padding: 8px 15px;
            text-decoration: none;
            border-radius: 6px;
            transition: 0.3s;
        }

            .btn-view:hover {
                background-color: #c0392b;
            }
    </style>
</head>
<body>

    <h1 class="page-title">Cinema</h1>

    <table class="categories-table">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.name</td>
                    <td>
                        <a href="/FirstMove/Home/Cinemainfo/@item.Id" class="btn-view">View All</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>
