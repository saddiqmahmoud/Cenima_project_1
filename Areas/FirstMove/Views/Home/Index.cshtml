@using Cenima_project.NewModels
@model Group



<div class="main-content">

     <form>
    <div class="main-content">
        <!-- 🔍 Search Bar -->
        <div class="search-bar">
            <input type="text" class="search-input" placeholder="Search by Movie Name" name="Name" />

            <!-- 🔽 Category Dropdown -->
                <select class="search-select" name="CategpryID">
                <option value="">All Categories</option>
              
                @foreach (var item in Model.Categories)
                {
                    <option value="@item.Id" >@item.Name</option>
                }
            </select>

                <button type="submit" class="search-btn">Search</button>
            </div>
        </div>
    </form>
        



    <h2 class="section-title">Now Showing</h2>

    <div class="movie-cards">
        @foreach (var item in Model.Movies)
        {
            <div class="movie-card">
                <!-- Movie Poster -->
                <img src="~/Photos/@item.ImgUrl" alt="@item.Name Poster" class="movie-poster" />

                <div class="movie-header">
                    <h3 class="movie-title">@item.Name</h3>
                    <div class="movie-cinema">Nile City Cinema</div>
                </div>

                <div class="movie-details">
                    <div class="detail-row">
                        <span class="detail-label">Price:</span>
                        <span class="price">@item.Price EGP</span>
                    </div>

                    <div class="detail-row">
                        <span class="detail-label">Cinema:</span>
                        <span class="price"> @item.Cinema.name</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Start Date:</span>
                        <span>@item.StartDate.ToString("MMM dd, yyyy")</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">End Date:</span>
                        <span>@item.EndDate.ToString("MMM dd, yyyy")</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Category:</span>
                        <span>@item.Category.Name</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Status:</span>
                        <span class="status now-playing">@item.MovieStatus</span>
                    </div>
                </div>

                <div class="card-buttons">
                    <a class="btn btn-dark" href="/FirstMove/Home/Info/@item.Id">Details</a>
                    <a class="btn btn-book" href="/FirstMove/Home/BookTicket">Book Ticket</a>
                </div>

            </div>
        }

    </div>


</div>



<style>
    .movie-poster {
        width: 100%;
        height: 250px;
        object-fit: cover;
        border-bottom: 1px solid #ddd;
    }
</style>

    <style>
        /* 🔍 Search Bar Styling */
        .search-bar {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 10px;
            margin-bottom: 20px;
        }

        .search-input, .search-select {
            padding: 10px;
            width: 200px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 14px;
        }

        .search-btn {
            padding: 10px 20px;
            background-color: #222;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: 0.3s;
        }

            .search-btn:hover {
                background-color: #444;
            }

        .movie-poster {
            width: 100%;
            height: 250px;
            object-fit: cover;
            border-bottom: 1px solid #ddd;
        }
    </style>

<nav aria-label="Page navigation example" class="pagination-container">
    <ul class="pagination">
        @if ((ViewBag.Pagenum - 1) > 0)
        {
            <a class="page-link" href="/FirstMove/Home/Index?Pagenum=@(ViewBag.Pagenum - 1)" aria-label="Previous">
                <span aria-hidden="true">&raquo;</span>
            </a>
        }
        else
        {
            <a class="page-link disabled" href="/FirstMove/Home/Index?Pagenum=@(ViewBag.Pagenum + 1)" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        }
        @for (int i = 1; i < ViewBag.Pagination;  i++)
        {
            if (i == ViewBag.Pagenum)
            {
                <li class="page-item active"><a class="page-link" href="/FirstMove/Home/Index?Pagenum=@i">@i</a></li>
            }
            else
            {
                <li class="page-item"><a class="page-link" href="/FirstMove/Home/Index?Pagenum=@i">@i</a></li>
            }
        }
        <li class="page-item">
            
            @if((ViewBag.Pagenum+1) < ViewBag.Pagination)
            {
                <a class="page-link" href="/FirstMove/Home/Index?Pagenum=@(ViewBag.Pagenum+1)" aria-label="Next">
             <span aria-hidden="true">&raquo;</span>
                </a>
            }
            else
            {
                <a class="page-link disabled" href="/FirstMove/Home/Index?Pagenum=@(ViewBag.Pagenum + 1)" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            }
        </li>
    </ul>
</nav>

<style>
    /* 🔥 Center Pagination */
    .pagination-container {
        display: flex;
        justify-content: center; /* Centers horizontally */
        margin-top: 20px;
        margin-bottom: 20px;
    }

    .pagination .page-link {
        color: #222;
        border: 1px solid #ddd;
    }

        .pagination .page-link:hover {
            background-color: #222;
            color: white;
        }
</style>

